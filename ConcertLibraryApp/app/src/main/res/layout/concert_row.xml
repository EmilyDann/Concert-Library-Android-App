<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvBandName"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Band Name"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvLocation"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBandName"
        android:text="Location"
        android:textSize="18sp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:text="Date"
        android:textSize="18sp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:text="User Name"
        android:textSize="18sp" />

    <RatingBar
        android:secondaryProgressTint="@color/white"
        android:id="@+id/rbRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:numStars="5"
        android:stepSize="1.0"
        android:isIndicator="true"/>

    <ImageView

        android:id="@+id/ivPicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/rbRatings"
        android:layout_toEndOf="@+id/rbRatings"
        android:layout_above="@+id/rbRatings" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@color/colorPrimary"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_below="@+id/ivPicture"
        android:layout_alignRight="@+id/ivPicture"
        android:layout_alignEnd="@+id/ivPicture" />


</RelativeLayout>